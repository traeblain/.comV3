---
const { frontmatter, url } = Astro.props;
---

<li>
  <article>
    {frontmatter.heroImage && <img width={720} height={360} src={frontmatter.heroImage} alt="" />}
    <h1 class="title"><a href={new URL(url, Astro.site).pathname}>{frontmatter.title}</a></h1>
    {frontmatter.date && <time>{frontmatter.date}</time>}
    {
      frontmatter.updatedDate && (
        <div>
          Last updated on <time>{frontmatter.updatedDate}</time>
        </div>
      )
    }
    <slot />
  </article>
</li>